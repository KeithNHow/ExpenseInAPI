{
    "al.enableCodeAnalysis": true,
    "al.codeAnalyzers": [
        "${CodeCop}",
        "${PerTenantExtensionCop}",
        "${UICop}"
    ],

    "[al]": {
        "editor.wordBasedSuggestions": "off",
        "editor.suggestSelection": "first",
        "editor.formatOnSave": true,
        "editor.codeLens": false,
        "editor.semanticHighlighting.enabled": true,
    },

    //"al.ruleSetPath": "./.vscode/ruleset.json",
    "al.backgroundCodeAnalysis": true,
    "al.enableCodeActions": true,
    "al.packageCachePath": "./.alpackages",
    "al-test-runner.sendDebugTelemetry": false,
    "al.compilationOptions": 
    {
        "generateReportLayout": true
    },

    "alOutline.codeCleanupActions": [
        "AddToolTips",
        "FixKeywordsCase",
        "FixIdentifiersCase",
        "SortVariables",
        "AddApplicationAreas",
        "SortTableFields",
        "AddMissingParentheses",
        "RemoveBeginEnd",
        "RemoveUnusedVariables"
    ],
    "alOutline.defaultApiPublisher": "expensesIn",
    "alOutline.defaultApiGroup": "expenseIn",
    "alOutline.defaultApiVersion": "v2.0",
    "alOutline.createApiFieldsCaptions": true,
    "alOutline.apiFieldNamesConversion": [
        {
            "searchRegExp": "^lineNo$",
            "newValue": "sequence"
        },
        {
            "searchRegExp": "^no$",
            "newValue": "number"
        },
        {
            "searchRegExp": "^systemId$",
            "newValue": "id"
        },
        {
            "searchRegExp": "^systemModifiedAt$",
            "newValue": "lastModifiedDateTime"
        }
    ],

    "workbench.editor.enablePreview": true,

    "CRS.ObjectNamePrefix": "EXI",
    "CRS.DisableDefaultAlSnippets": false,
    //"CRS.OnSaveAlFileAction": "Rename",
    "CRS.FileNamePattern": "<ObjectPrefix><ObjectName>.<ObjectTypeShortPascalCase>.al",
    "CRS.FileNamePatternExtensions": "<ObjectPrefix><ObjectName>.<ObjectTypeShortPascalCase>.al",
    "CRS.FileNamePatternPageCustomizations": "<ObjectPrefix><ObjectName>.<ObjectTypeShortPascalCase>.al",
}